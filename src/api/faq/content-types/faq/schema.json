{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Frequently Asked Questions for financing and consultation services"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "answer": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "financing",
        "consultation",
        "legal",
        "taxation",
        "general",
        "investment-process",
        "documentation",
        "timeline"
      ],
      "default": "general",
      "required": true
    },
    "priority": {
      "type": "integer",
      "min": 1,
      "max": 100,
      "default": 50,
      "required": true
    },
    "keywords": {
      "type": "json",
      "default": []
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "service_type": {
      "type": "enumeration",
      "enum": [
        "mortgage-financing",
        "investment-consultation",
        "legal-consultation",
        "tax-consultation",
        "property-management",
        "general"
      ],
      "default": "general"
    },
    "country_specific": {
      "type": "string",
      "maxLength": 100
    },
    "commercial_value": {
      "type": "enumeration",
      "enum": [
        "high",
        "medium",
        "low"
      ],
      "default": "medium"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "view_count": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "helpful_votes": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "site": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::site.site",
      "inversedBy": "faqs",
      "required": true
    }
  }
}